{
  "editor.defaultFormatter": "denoland.vscode-deno",

  "deno": {
    "enable": true,
    "config": "deno.json"
  },
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "always"
    }
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "denoland.vscode-deno",

    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "always"
    }
  }
}
